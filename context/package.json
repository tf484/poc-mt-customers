{
    "name": "context",
    "version": "1.0.0",
    "description": "Context",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap-cloud-sdk/http-client": "^3",
        "@sap/cds": "^7",
        "@sap/cds-hana": "^2",
        "@sap/cds-mtxs": "^1.18.2",
        "@sap/textbundle": "^5",
        "@sap/xsenv": "^4",
        "@sap/xssec": "^3",
        "cds-swagger-ui-express": "^0",
        "cfenv": "^1",
        "express": "^4",
        "node-fetch": "^2.6.7",
        "node-jose": "^2",
        "passport": "^0"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.108.12",
        "axios": "^1.4.0",
        "chai": "^4.3.7",
        "chai-as-promised": "^7.1.1",
        "chai-subset": "^1.6.0",
        "mocha": "^10.2.0",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "rimraf": "^5.0.1",
        "sqlite3": "^5.1.6"
    },
    "scripts": {
        "start": "cds-serve",
        "test": "nyc --reporter=html --reporter=text mocha --timeout 20000",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
        "undeploy": "cf undeploy context --delete-services --delete-service-keys --delete-service-brokers",
        "build": "export COPYFILE_DISABLE=1 && rimraf resources mta_archives && mbt build --mtar archive",
        "build-deploy": "run-s build deploy",
        "login-test": "../../scripts/cf-aic-test-login.sh",
        "build-deploy-test": "run-s login-test build-deploy",
        "login-dev": "../../scripts/cf-aic-dev-login.sh",
        "build-deploy-dev": "run-s login-dev build-deploy",
        "watch-contexts": "cds watch --open contexts/webapp/index.html?sap-ui-xx-viewCache=false"
    },
    "cds": {
        "requires": {
            "db": "sql",
            "destinations": true,
            "connectivity": true,
            "[production]": {
                "auth": "xsuaa",
                "db": "hana-mt",
                "multitenancy": true,
                "toggles": false,
                "extensibility": false
            },
            "[development]": {
                "auth": {
                    "kind": "mocked",
                    "users": {
                        "user": {
                            "password": "",
                            "id": "user",
                            "roles": []
                        },
                        "admin": {
                            "password": "",
                            "id": "admin",
                            "roles": [
                                "admin"
                            ]
                        }
                    }
                }
            }
        }
    },
    "sapux": [
        "app/contexts"
    ]
}
