{
  "name": "poc-mt-orders",
  "version": "1.0.0",
  "description": "Aicomp MT POC Orders",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap-cloud-sdk/connectivity": "^3.18.0",
    "@sap-cloud-sdk/http-client": "^3.18.0",
    "@sap-cloud-sdk/resilience": "^3.18.0",
    "@sap/cds": "^8",
    "@sap/cds-mtxs": "^2",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.6",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "@sap/ux-specification": "^1.120.16",
    "npm-run-all": "^4",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-orders": "cds watch --open orders/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy poc-mt-orders --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "build-deploy": "run-s build deploy",
    "login-poc": "../../scripts/cf-aic-poc-login.sh",
    "build-deploy-poc": "run-s login-poc build-deploy",
    "login-dev": "../../scripts/cf-aic-dev-login.sh",
    "build-deploy-dev": "run-s login-dev build-deploy",
    "login-test": "../../scripts/cf-aic-test-login.sh",
    "build-deploy-test": "run-s login-test build-deploy"
  },
  "cds": {
    "requires": {
      "ContextService": {
        "kind": "odata",
        "model": "srv/external/ContextService",
        "[development]": {
          "credentials": {
            "authentication": "BasicAuthentication",
            "username": "admin",
            "password": ""
          }
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa",
        "multitenancy": true
      },
      "[development]": {
        "db": {
          "credentials": {
            "url": ":memory:"
          }
        }
      }
    },
    "profile": "with-mtx-sidecar"
  },
  "sapux": [
    "app/orders"
  ]
}